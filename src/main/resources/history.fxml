                    <Insets top="20.0" />
                </HBox.margin>
            </Button>
            <Label fx:id="limitFav" prefHeight="25.0" prefWidth="150.0" styleClass="label-primary" text="10" visible="false">
                <HBox.margin>
                    <Insets left="100.0" top="15.0" />
                </HBox.margin>
            </Label>
            <VBox prefHeight="200.0" prefWidth="100.0">
